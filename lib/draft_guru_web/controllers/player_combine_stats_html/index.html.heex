<.header>
    Master list of draft combine stats for individual players
    <:actions>
        <.link href={~p"/player_combine_stats/new"}>
            <.button>New Player Combine Stats</.button>
        </.link>
    </:actions>
</.header>

<form action = "/player_combine_stats" method="get" class="flex items-center gap-2 mb-4">
<input
 type="text"
 name="player_name"
 value={@search}
 placeholder="search by player name"
 class="input"
/>

<.button>Search</.button>
</form>

<.table 
    id = "player_combine_stats"
    rows = {@players}
    row_click = {&JS.navigate(~p"/player_combine_stats/#{&1}")}
    container_class="pl-0 sm:px-0"
    table_class="px-0 w-full"
>

