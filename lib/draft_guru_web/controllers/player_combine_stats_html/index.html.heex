<!-- Code for the pagination buttons at the bottom -->

<%
    current_page = String.to_integer(@page)
    total_pages = @total_pages
    start_page = max(1, current_page - 2)
    end_page = min(total_pages, current_page + 2)
 %>

 <div class="join">
    <%= if current_page > 1 do %>
        <button class="join-item btn">
        <a href={"/player_combine_stats?page=1&player_name=#{@search}"}>First</a>
        </button>
    <% end %>

    <%= if current_page > 1 do %>

      <button class="join-item btn">
        <a href={"/player_combine_stats?page=#{current_page - 1}&player_name=#{@search}"}>Previous</a>
      </button>
    <% end %>

    <%= for page_number <- start_page..end_page do %>

<%= if page_number < total_pages do %>

  <button class={"join-item btn " <> if page_number == current_page, do: "btn-active", else: ""}>
    <a href={"/player_combine_stats?page=#{page_number}&player_name=#{@search}"}>
      <%= page_number %>
    </a>
  </button>

<% end %>

    <% end %>

    <%= if current_page < total_pages do %>

      <button class="join-item btn">
        <a href={"/player_combine_stats?page=#{current_page + 1}&player_name=#{@search}"}>Next</a>
      </button>

      <button class="join-item btn">
        <a href={"/player_combine_stats?page=#{total_pages}&player_name=#{@search}"}>Last</a>
      </button>      


    <% end %>

 </div>

